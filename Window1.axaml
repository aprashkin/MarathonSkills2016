<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="450"
		WindowStartupLocation="CenterScreen"
		x:CompileBindings="False"
        x:Class="MarathonSkills2016.Window1"
        Title="MarathonSkills2016">
	<DockPanel Background="White">
		<!-- Header -->
		<StackPanel DockPanel.Dock="Top" Background="DarkGray">
			<!-- Back button -->
			<Button Content="Назад"
					Click="BackToMain"
					HorizontalContentAlignment="Center"
					CornerRadius="10"
                    Width="80"
                    Height="30"
                    Margin="10,10,0,0"
                    Background="WhiteSmoke"
                    BorderThickness="1"
                    BorderBrush="Gray"/>

			<!-- Title -->
			<TextBlock Text="MARATHON SKILLS 2016"
                       FontWeight="Bold"
                       FontSize="24"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,20"/>
		</StackPanel>

		<!-- Main Content -->
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
			<!-- Buttons -->
			<Button Content="Я участвовал ранее"
					Click="Login_Click"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="10"
                    Width="300"
                    Height="50"
                    Margin="0,0,0,20"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"/>

			<Button Content="Я новый участник"
                    Width="300"
					Click="Register_Click"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="10"
                    Height="50"
                    Margin="0,0,0,20"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"/>
			
			<Button Content="Login"
                    Width="100"
				    HorizontalContentAlignment="Center"
				    VerticalContentAlignment="Center"
				    HorizontalAlignment="Right"
				    CornerRadius="10"
                    Height="30"
                    DockPanel.Dock="Bottom"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"/>

		</StackPanel>
	</DockPanel>
	
</Window>
