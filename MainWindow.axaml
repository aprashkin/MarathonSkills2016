<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="450"
		WindowStartupLocation="CenterScreen"
		x:CompileBindings="False"
        x:Class="MarathonSkills2016.MainWindow"
        Title="MarathonSkills2016">
	<DockPanel Background="White">
		<StackPanel DockPanel.Dock="Top" Background="Gray">
			<TextBlock Text="MARATHON SKILLS 2016"
                       FontWeight="Bold"
                       FontSize="24"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,20,0,0"/>
			<TextBlock Text="Москва, Россия"
                       FontSize="16"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,0"/>
			<TextBlock x:Name="CurrentDateTimeTextBlock"
                       FontSize="16"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,20"/>
		</StackPanel>
		
		<StackPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
			<Button Content="Я хочу стать бегуном"
					Click="WannaBeRunner"
                    Width="300"
                    Height="50"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="10"
                    Margin="0,0,0,10"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"
					/>
			<Button Content="Я хочу стать спонсором бегуна"
					Click="WannaBeSponsor"
                    Width="300"
                    Height="50"
                    Margin="0,0,0,10"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="10"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"/>
			<Button Content="Я хочу узнать больше о событии"
                    Width="300"
                    Height="50"
                    Margin="0,0,0,20"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="10"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    BorderThickness="1"
                    BorderBrush="LightGray"/>
		</StackPanel>
		
		<Button Content="Login"
				HorizontalAlignment="Center"
                Width="100"
                Height="30"
				HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					CornerRadius="4"
                DockPanel.Dock="Bottom"
                Margin="0,0,0,20"
                Background="WhiteSmoke"
                Foreground="Black"
                BorderThickness="1"
                BorderBrush="LightGray"/>

		<TextBlock DockPanel.Dock="Bottom"
                   Text="18 дней 8 часов и 17 минут до старта марафона!"
                   FontSize="14"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,10"/>
	</DockPanel>
</Window>
